@model POYA.Areas.EduHub.Models.EArticle

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Localizer["Write your article"]</h1>

<hr />
<div class="row">
    <div class="col">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group ">
                <input asp-for="Title" class="form-control col offset-3 col-6"  placeholder="@Localizer["Title"]"/>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Content" class="form-control" hidden />
                <div id="ContentEditor"></div>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubjectId" class="control-label"></label>
                <div class="row col-6">
                    <input asp-for="SubjectId" class="col col-2 form-control" />
                    <input asp-for="GradeId" class="col col-2 form-control" />
                    <input asp-for="TypeId" class="col col-2 form-control" />
                </div>
                <span asp-validation-for="SubjectId" class="text-danger"></span>
                <span asp-validation-for="GradeId" class="text-danger"></span>
                <span asp-validation-for="TypeId" class="text-danger"></span>
            </div> 
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/lib/wangEditor-3.1.1/release/wangEditor.min.js"></script>
    <script>
        var _Editor = window.wangEditor;
        var Editor = new _Editor("#ContentEditor");
        Editor.create();
    </script>
}

@section Styles {
<style>
    #Title{
        text-align:center;
    }
</style>
}