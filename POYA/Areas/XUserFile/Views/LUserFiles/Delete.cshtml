@model POYA.Areas.XUserFile.Models.LUserFile

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>@(string.Format(Localizer["Are you sure you want to delete {0}"], Model.Name))?</h3>


<partial name="_DetailsPartial" model="Model" />

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <a asp-action="Index" asp-route-InDirId="@(Model.InDirId)" class="btn btn-outline-info">&laquo; @Localizer["Back"]</a>
    <input type="submit" value="Delete" class="btn btn-danger" />
</form>


@section Styles{
    <style>
        video, img {
            max-width: 90%;
        }
    </style>
}

