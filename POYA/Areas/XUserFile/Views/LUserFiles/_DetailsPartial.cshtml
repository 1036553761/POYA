@model POYA.Areas.XUserFile.Models.LUserFile

@{
    var FileUrl = Url.Action("GetFile", "LUserFiles", new { id = Model.Id });
}

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
            @if (Model.ContentType.Contains("video"))
            {
                <video src="@FileUrl" type="@(Model.ContentType)" controls></video>
            }
            else if (Model.ContentType.Contains("image"))
            {
                <img src="@FileUrl" />
            }
            else if (Model.ContentType.Contains("audio"))
            {
                <audio src="@FileUrl" controls loop></audio>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DOCreate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DOCreate.LocalDateTime)
        </dd>
        @if (Model.IsShared)
        {
            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
                @string.Format( Localizer["It is shared, and the sharing code is {0}"],string.IsNullOrWhiteSpace( Model.SharingCode)?"null":Model.SharingCode)
            </dd>
        }
    </dl>
</div>