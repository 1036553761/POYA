@model POYA.Models.LDir

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@(string.Format(Localizer["Details for {0}"], Model.Name))<span class="directorySpan">&#128448;</span></h1>

<partial name="_DetailsPartial" model="Model" />

<div>
    <a asp-action="Index" asp-controller="LUserFiles" asp-route-InDirId="@(Model.InDirId)" class="btn btn-outline-info"><< @Localizer["Back"]</a>
    <a asp-action="Edit" asp-route-id="@Model.Id" title="@Localizer["Edit"]" class="btn btn-outline-primary">@Localizer["Edit"]</a>
</div>

@section Styles{
    <style>
        .InFullPathSpan {
            font-size: 80%;
            color: blue;
        }
    </style>
}