@model POYA.Models.LUserFile

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserAllSubDirs = ViewData["UserAllSubDirs"] as List<SelectListItem>;
}

<h1>@(string.Format(Localizer["Edit for {0}"], Model.Name)) </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="row">
                    <input asp-for="Name" class="form-control col-7" />
                    <select asp-for="CopyOrMove" asp-items="Model.CopyOrMoveSelectListItems" class=" form-control col-4"></select>
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
                <span asp-validation-for="CopyOrMove" class="text-danger"></span>
                <div class="row" style="margin-top:20px">
                    <select asp-for="InDirId" asp-items="Model.UserAllSubDirSelectListItems" class="form-control col-11"></select>
                </div>
                <span asp-validation-for="InDirId" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top:20px">
                <a class="btn btn-outline-info" asp-action="Index" asp-route-InDirId="@(Model.InDirId)"><< @Localizer["Back"]</a>
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            $("#InDirId").hide();
            $("#CopyOrMove").on("change", function () {
                if ($("#CopyOrMove option:selected").val() != 0) {
                    $("#InDirId").show();
                } else {
                    $("#InDirId").hide();
                }
            });
        });
    </script>
}

