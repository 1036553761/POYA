@model POYA.Areas.XUserFile.Models.LUserFile

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var UserAllSubDirs = ViewData["UserAllSubDirs"] as List<SelectListItem>;
}

<h1>@(string.Format(Localizer["Edit for {0}"], Model.Name)) </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <div class="row">
                    <input asp-for="Name" class="form-control col-7" />
                    <select asp-for="CopyMove" asp-items="Model.CopyMoveSelectListItems" class=" form-control col-4"></select>
                </div>
                <span asp-validation-for="Name" data-interval="5000" class="text-danger"></span>
                <span asp-validation-for="CopyMove" data-interval="5000" class="text-danger"></span>
                <div class="row">
                    <select asp-for="InDirId" asp-items="Model.UserAllSubDirSelectListItems" class="form-control col-11" ></select>
                </div>
                <span asp-validation-for="InDirId" data-interval="5000" class="text-danger"></span>
                <div class="row">
                    <select asp-for="IsShared" asp-items="@Model.IsSharedSelectListItems" class="form-control col-4"></select>
                    <input asp-for="SharingCode" class="form-control col-6" />
                </div>
            </div>
            <div class="form-group" style="margin-top:20px">
                <a class="btn btn-outline-info" asp-action="Index" asp-route-InDirId="@(Model.InDirId)">&laquo; @Localizer["Back"]</a>
                <input type="submit" value="@Localizer["Save"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        $(document).ready(function () {
            /*
            $("#InDirId").hide();
            $("#SharingCode").hide();
            */

            //#region
             if ("@(Model.IsShared)" =="True") {
                    $("#SharingCode").show();
                } else {
                    $("#SharingCode").hide();
                }
            //#endregion
            $("#CopyMove").on("change", function () {
                if ($("#CopyMove option:selected").val() != 0) {
                    $("#InDirId").show();
                } else {
                    $("#InDirId").hide();
                }
            });
            $("#IsShared").on("change", function () {
                if ($("#IsShared option:selected").val() =="true") {
                    $("#SharingCode").show();
                } else {
                    $("#SharingCode").hide();
                }
            });
            $("#SharingCode").on("click", function () {
                $("#SharingCode").val(parseInt(100000+Math.random()*899999));   //  100_000   999_999
            });
        });
    </script>
}

@section Styles{ 
<style>
    .row{
        margin-top:5px;
    }

    #InDirId{
        display:none;
    }
</style>
}

