@section Styles{
    <style>
        .home-carousel {
            background-color: rgba(25,25,112,0.1);
            margin-top: 20px;
            border-radius: 10px;
        }

        .carousel-caption h5, .carousel-caption p {
            color: blue;
            text-shadow: 1px 1px 2px #CDB5CD;
        }

        .carousel-caption h5 {
            zoom: 150%;
            font-weight: bold;
        }
         .carousel-item{
            height: 500px;
            overflow:hidden;
         }

            .carousel-item img {
                margin: auto;
                object-fit: cover;
            }

        /*
         *  FROM    https://blog.csdn.net/ly305750665/article/details/71499497
         *  THANK   https://blog.csdn.net/ly305750665
         */
        .rotate-img {
            animation: rotateImg 50s linear infinite;
            vertical-align: middle;
        }
        .zoom-out-img{
                max-width:100%;
             animation: zoomOutImg 20s linear infinite;
            vertical-align: middle;
        }
        .zoom-in-img {
            animation: zoomInImg 20s linear infinite;
            vertical-align: middle;
        }

        @@keyframes zoomOutImg{
            0% {
                height:150%;
            }

            100% {
                height:100%;
            }
        }

        @@keyframes zoomInImg {
            0% {
                width:50%;
            }

            100% {
                width:150%;
            }
        }

        @@keyframes rotateImg {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
        /*--------*/
    </style>
}

