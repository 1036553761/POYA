@model POYA.Models.SharedF

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>SharedF</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name_)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name_)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DOSharing)
        </dt>
        <dd class = "col-sm-10">
            @( Model.DOSharing.LocalDateTime.ToString("MM-dd-yyyy"))
